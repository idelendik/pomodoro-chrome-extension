{
  "manifest_version": 3,
  "name": "Another Pomodoro",
  "version": "0.1.0",
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "icons": {
    "16": "./images/icon-16.png",
    "32": "./images/icon-32.png",
    "48": "./images/icon-64.png",
    "128": "./images/icon-128.png"
  },
  "background": {
    "service_worker": "./background/background.js",
    "type": "module"
  },
  "permissions": ["offscreen"]
}